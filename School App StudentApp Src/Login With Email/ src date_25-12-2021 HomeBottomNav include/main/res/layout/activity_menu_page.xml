<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_bar_background"
    android:orientation="vertical"
    tools:context=".MenuPageActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_school_150" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/studentName"
            android:text="Welcome"
            android:textSize="18sp"
            android:textColor="#282E50"
            android:layout_marginBottom="20dp"/>
        <com.google.android.material.navigation.NavigationView
            android:id="@+id/side_nav_view"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginBottom="0dp"
            app:itemHorizontalPadding="20dp"
            android:fitsSystemWindows="true"
            android:background="@drawable/side_bar_background"
            app:itemBackground="@drawable/side_bar_item_background"
            android:theme="@style/SideNavigationTheme"
            android:padding="5dp"
            app:menu="@menu/side_bar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:textAlignment="center"
            android:text="Designed and Developed by Shivam Jaiswal"/>
    </LinearLayout>
    </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-50dp"
            android:id="@+id/home_navigation_bottom_view"
            app:menu="@menu/home_bottom_bar"
            android:theme="@style/BottomNavigationTheme"
            android:layout_alignParentBottom="true"
            android:background="@color/white"/>



</LinearLayout>

